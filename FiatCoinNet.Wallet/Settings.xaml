<Window x:Class="FiatCoinNet.WalletGui.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiatCoinNet.WalletGui"
        mc:Ignorable="d"
        Title="{DynamicResource WINDOW_TITLE_SETTINGS}" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="{DynamicResource SETTING_LANGUAGE}" HorizontalAlignment="Left" Margin="40,58,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxLanguage" HorizontalAlignment="Left" Margin="117,62,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxLanguage_SelectionChanged"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="109,215,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>

    </Grid>
</Window>
